#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
int headsCount = 0;
int tailsCount = 0;

printf("Tossing a coin...\n");
for (int i = 0; i < 3; i++) {
        int result = rand() % 2; 
        if (result == 0) {
            printf("Round %d: Heads\n", i + 1);
            headsCount++;
        } else {
            printf("Round %d: Tails\n", i + 1);
            tailsCount++;
        }
    }
    printf("Heads: %d, Tails: %d \n",headsCount, tailsCount);
    if(headsCount > tailsCount){
        printf("%s won!\n", name);
    } else {
        printf("%s lost!\n", name);
    }
    return 0;
}
