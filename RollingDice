#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {

    char name[100];
    printf("What is your name?\n");
    scanf(" %s", &name);
    printf("Hello, %s!\n", name);

    srand(time(0));

    int dice1 = (rand() % 6) + 1;
    int dice2 = (rand() % 6) + 1;
    int sum = dice1 + dice2;

    printf("Rolling dice...\n");
    printf("Die 1: %d\n", dice1);
    printf("Die 2: %d\n", dice2);
    printf("Total value: %d\n", sum);

    return 0;
}
